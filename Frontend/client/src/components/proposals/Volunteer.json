{
  "formId": "volunteer_form",
  "title": "Volunteer Registration Form",
  "description": "Apply to volunteer for SHIFT2025.",
  "endpoint": "/api/volunteer",
  "method": "POST",

  "fields": [
    {
      "name": "linkedin",
      "label": "LinkedIn / Portfolio / Personal Website",
      "type": "url",
      "placeholder": "https://",
      "required": true
    },

    {
      "name": "role",
      "label": "Preferred Role",
      "type": "select",
      "required": true,
      "options": [
        "Design",
        "Content",
        "Social Media",
        "Operations",
        "Logistics",
        "Sponsorship",
        "Tech",
        "Other"
      ]
    },

    {
      "name": "secondaryRole",
      "label": "Secondary Role Preference",
      "type": "select",
      "required": true,
      "options": [
        "Design",
        "Content",
        "Social Media",
        "Operations",
        "Logistics",
        "Sponsorship",
        "Tech",
        "Other"
      ]
    },

    {
      "name": "availability",
      "label": "Availability",
      "type": "select",
      "required": true,
      "options": ["Weekdays", "Weekends", "Evenings", "Flexible"]
    },

    {
      "name": "inPerson",
      "label": "Are you available for in-person meetings in Delhi NCR?",
      "type": "select",
      "required": true,
      "options": ["Yes", "No"]
    },

    {
      "name": "hours",
      "label": "Hours per week",
      "type": "select",
      "required": true,
      "options": ["1-3 hours", "3-5 hours", "5-8 hours", "8+ hours"]
    },

    {
      "name": "volunteeredBefore",
      "label": "Have you volunteered or organized events before?",
      "type": "select",
      "required": true,
      "options": ["Yes", "No"]
    },

    {
      "name": "experienceDesc",
      "label": "If yes, describe briefly",
      "type": "textarea",
      "rows": 3,
      "placeholder": "",
      "visibleIf": { "volunteeredBefore": "Yes" },
      "requiredIf": { "volunteeredBefore": "Yes" }
    },

    {
      "name": "teamExperience",
      "label": "Any previous experience working in teams?",
      "type": "textarea",
      "rows": 3,
      "required": false
    },

    {
      "name": "sampleWork",
      "label": "Upload / Link to Sample Work",
      "type": "text",
      "placeholder": "Drive / Notion / Portfolio link",
      "required": false
    },

    {
      "name": "whyVolunteer",
      "label": "Why do you want to volunteer for SHIFT2025?",
      "type": "textarea",
      "rows": 3,
      "required": true
    },

    {
      "name": "learnings",
      "label": "What do you expect to learn or gain?",
      "type": "textarea",
      "rows": 3,
      "required": true
    },

    {
      "name": "pressureSituation",
      "label": "Describe a situation where you handled pressure (optional)",
      "type": "textarea",
      "rows": 3,
      "required": false
    },

    {
      "name": "heardFrom",
      "label": "How did you hear about this opportunity?",
      "type": "select",
      "required": true,
      "options": [
        "WhatsApp / Telegram",
        "LinkedIn",
        "Instagram",
        "Friend / Colleague",
        "Partner Community",
        "Other"
      ]
    },

    {
      "name": "tshirtSize",
      "label": "T-shirt Size",
      "type": "select",
      "required": true,
      "options": ["S", "M", "L", "XL", "XXL"]
    },

    {
      "name": "emergencyContact",
      "label": "Emergency Contact Number",
      "type": "text",
      "placeholder": "Enter phone number",
      "required": true
    },

    {
      "name": "comfortableCommute",
      "label": "Are you comfortable commuting for on-ground work?",
      "type": "select",
      "required": true,
      "options": ["Yes", "No"]
    }
  ]
}
